@model IEnumerable<Project2MissionSite.Models.MissionQuestion>

@{
    ViewBag.Title = "MissionInfo";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Missions.MissionName</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h3>Mission President: </h3>
            <h3>Mission Home Address: </h3>
            <h3>Language: </h3>
            <h3>Climate: </h3>
            <h3>Dominant Religion: </h3>

        </div>
        <div class="col-md-3">
            <h3>@ViewBag.Missions.MissionPresFirstName @ViewBag.Missions.MissionPresLastName</h3>
            <h3>@ViewBag.Missions.MissionHomeAddress</h3>
            <h3>@ViewBag.Missions.MissionLanguage</h3>
            <h3>@ViewBag.Missions.MissionClimate</h3>
            <h3>@ViewBag.Missions.MissionDominantReligion</h3>
        </div>
        <div class="col-md-6">
            @{
                string flag = @ViewBag.Missions.MissionFlag + ".png";
            }
            <img src="~/Content/Images/@flag" />
        </div>
    </div>
</div>


